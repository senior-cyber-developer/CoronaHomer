@model List<CoronaHomer.Models.Entities.User>

@{
    ViewData["Title"] = "Ranking";
}
<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nutzer</th>
            <th scope="col">Solidaritäts-Score</th>
        </tr>
    </thead>

    @for (int i = 0; i < Model.Count; i++)
    {
        var user = Model[i];
        <tr>
            <td scope="row">@(i + 1)</td>
            <td>@user.UserName</td>
            <td>@user.SolidarityScore</td>
        </tr>
    }
</table>
